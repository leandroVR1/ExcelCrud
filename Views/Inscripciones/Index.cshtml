@model IEnumerable<ExcelCrudMVC.ViewModels.InscripcionViewModel>

<div class="container mt-5">
    <h2>Lista de Inscripciones</h2>
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Estudiante</th>
                <th>Materia</th>
                <th>Profesor</th>
                <th>Decano</th>
                <th>Universidad</th>
                <th>Carrera</th>
                <th>Semestre</th>
                <th>Año</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.InscripcionID</td>
                    <td>@item.EstudianteNombre</td>
                    <td>@item.MateriaNombre</td>
                    <td>@item.ProfesorNombre</td>
                    <td>@item.DecanoNombre</td>
                    <td>@item.UniversidadNombre</td>
                    <td>@item.CarreraNombre</td>
                    <td>@item.Semestre</td>
                    <td>@item.Año</td>
                    <td>@item.EstadoDeInscripcion</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.InscripcionID" class="btn btn-primary">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.InscripcionID" class="btn btn-info">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.InscripcionID" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
