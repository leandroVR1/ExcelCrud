@model IEnumerable<ExcelCrudMVC.ViewModels.InscripcionViewModel>

<div class="container">
    <h2>Lista de Inscripciones</h2>
    <a class="btn btn-primary" asp-action="Create">Crear Nueva Inscripción</a>
    <table class="table table-bordered table-striped mt-3">
        <thead>
            <tr>
                <th>ID</th>
                <th>Estudiante</th>
                <th>Materia</th>
                <th>Profesor</th>
                <th>Decano</th>
                <th>Universidad</th>
                <th>Carrera</th>
                <th>Semestre</th>
                <th>Año</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.InscripcionID</td>
                    <td>@item.EstudianteNombre</td>
                    <td>@item.MateriaNombre</td>
                    <td>@item.ProfesorNombre</td>
                    <td>@item.DecanoNombre</td>
                    <td>@item.UniversidadNombre</td>
                    <td>@item.CarreraNombre</td>
                    <td>@item.Semestre</td>
                    <td>@item.Año</td>
                    <td>@item.EstadoDeInscripcion</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.InscripcionID" class="btn btn-warning btn-sm">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.InscripcionID" class="btn btn-danger btn-sm">Eliminar</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
